#####################################################################
### THIS FILE IS MANAGED BY PUPPET
### puppet:///modules/puppetmaster/logrotate-passenger
#####################################################################

# Rotate puppetmaster passenger (apache) logs
/var/log/apache2/*.log {
	daily
	missingok
	rotate 7
	compress
	delaycompress
	sharedscripts
	postrotate
		/usr/sbin/service apache2 graceful
	endscript
}
