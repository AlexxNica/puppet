title   "network errors/drops, all interfaces"
vtitle  "packets/s"
area    :first

field :tx, :color => "green",
               :alias => "tx",
               :data  => "sumSeries(servers.graphite1001.network.*.tx_errors.value, servers.graphite1001.network.*.tx_drop.value)"

field :rx, :color => "blue",
               :alias => "rx",
               :data  => "sumSeries(servers.graphite1001.network.*.rx_errors.value, servers.graphite1001.network.*.rx_drop.value)"
