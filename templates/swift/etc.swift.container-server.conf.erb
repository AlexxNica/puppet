[DEFAULT]
bind_ip = 0.0.0.0
devices = /srv/swift-storage/
workers = <%= scope.lookupvar("::processorcount") %>
db_preallocation = on
<% if @allowed_sync_hosts -%>
allowed_sync_hosts = <%= allowed_sync_hosts.join(",") %>
<% end -%>
# statsd collection is off for the initial deploy; on after figuring out ganglia issues
# log_statsd_host = localhost
# log_statsd_port = 8125
# log_statsd_default_sample_rate = 1
# log_statsd_metric_prefix =

[container-sync]
log_name = container-sync
#log_facility = LOG_LOCAL0
#log_level = DEBUG
# Will sync, at most, each container once per interval
interval = 300
# Maximum amount of time to spend syncing each container
container_time = 60

[pipeline:main]
pipeline = container-server

[app:container-server]
use = egg:swift#container

[container-replicator]
concurrency = 1

[container-updater]
concurrency = 1

[container-auditor]
