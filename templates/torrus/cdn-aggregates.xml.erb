<?xml version="1.0" encoding="UTF-8"?>

<%
def node_list(role, site)
	return scope.lookupvar("role::cache::configuration::decommissioned_nodes")[role][site] + scope.lookupvar("role::cache::configuration::active_nodes")[role][site]
end

def squid_rpn(role, site, list=nil)
	result = ""
	list = node_list(role, site) if list == nil
	list.each do |node|
		result << "{/Squids/#{site}/#{role}/#{node}/%squidlayer%/%squidmetric%},"
	end
	result << "%sumsep%" + (["%sumfunc%"]*(list.length - 1)).join(",") unless list.empty?
	return result
end

def varnish_rpn(role, site, list=nil)
	result = ""
	list = node_list(role, site) if list == nil
	list.each do |node|
		result << "{/Varnish/#{site}/#{role}/#{node}/%varnishmetric%},"
	end
	result << "%sumsep%" + (["%sumfunc%"]*(list.length - 1)).join(",") unless list.empty?
	return result
end
