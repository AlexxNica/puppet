# vim:ft=apache: ts=4 sw=4
# Apache configuration for <http://transparency.wikimedia.org>
# This file is managed by Puppet.
<VirtualHost *:80>
    ServerName transparency.wikimedia.org
    DocumentRoot <%= @docroot %>

    <Directory />
        AllowOverride None
    </Directory>

    <Directory <%= @docroot %>>
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

    RewriteEngine on
    RewriteCond %{ENV:REDIRECT_STATUS} !=404
    RewriteCond %{TIME} <<%= Time.utc(2014, 'Aug', 5, 21).strftime('%Y%m%d%H%M%S') %>
    RewriteRule .* - [L,R=404]
</VirtualHost>
