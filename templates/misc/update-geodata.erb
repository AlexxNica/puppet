#!/bin/bash

# Allow disabling this script temporarily
if [ -e /tmp/disable-update-geodata ] ; then
	exit
fi

<% if scope.lookupvar('::realm') == 'production' -%>
/usr/local/bin/foreachwikiindblist /usr/local/apache/common/wikipedia.dblist extensions/GeoData/solrupdate.php
/usr/local/bin/foreachwikiindblist /usr/local/apache/common/special.dblist extensions/GeoData/solrupdate.php
/usr/local/bin/foreachwikiindblist /usr/local/apache/common/wikivoyage.dblist extensions/GeoData/solrupdate.php
<% else -%>
/usr/local/bin/foreachwikiindblist /usr/local/apache/common/all-labs.dblist extensions/GeoData/solrupdate.php
<% end -%>
